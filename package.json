{
  "name": "interval-editing",
	"displayName": "Interval editing",
	"description": "Divides a space between first and last cursor to many edit points with equal intervals of lines.",
	"publisher": "Bognaum",
	"icon": "IMG/icon.jpg",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:interval-editing.toggleInterval"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"keybindings": [
			{
				"key": "alt+shift+l",
				"command": "interval-editing.toggleInterval",
				"when": "editorFocus"
			}
		],
		"commands": [
			{
				"command": "interval-editing.toggleInterval",
				"title": "Interval editing: Toggle interval"
			}
		],
		"menus": {
			"editor/title": [
				{"command": "interval-editing.toggleInterval"}
			]
		},
		"configuration": {
			"title": "Interval editing",
			"properties": {
				"interval-editing.selectLineFrom": {
					"type": "string",
					"default": "end-of-line",
					"enum": [
						"start-of-line",
						"start-of-text",
						"end-of-line",
						"end-of-text"
					],
					"enumDescriptions": [
						"Select lines from start of line.",
						"Select lines from start of text.",
						"Select lines from end of line.",
						"Select lines from end of text."
					]
				},
				"interval-editing.selectLineTo": {
					"type": "string",
					"default": "end-of-line",
					"enum": [
						"start-of-line",
						"start-of-text",
						"end-of-line",
						"end-of-text"
					],
					"enumDescriptions": [
						"Select lines to start of line.",
						"Select lines to start of text.",
						"Select lines to end of line.",
						"Select lines to end of text."
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"ts-loader": "^9.2.6",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1",
		"@vscode/test-electron": "^2.0.3"
	}
}
